@page
@model StudentRegisterModel
@{
    ViewData["Title"] = "Student Register";
}


<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12 clear-padding-xs">
            <h5 class="page-title"><i class="fa fa-user-secret"></i> STUDENT REGISTER</h5>
            <div class="section-divider"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 clear-padding-xs">
            <div class="col-md-12">
                <div class="dash-item first-dash-item">
                    <h6 class="item-title"><i class="fa fa-user"></i>STUDENT REGISTER INFO</h6>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="inner-item">
                            <div asp-validation-summary="ModelOnly" class="Dash-form text-danger"></div>
                            <div class="dash-form">
                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.StudentInfo.FirstName" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>FIRST NAME</label>
                                    <input asp-for="ViewModel.StudentInfo.FirstName" />
                                    <span asp-validation-for="ViewModel.StudentInfo.FirstName" class="text-danger"></span>
                                </div>

                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.StudentInfo.LastName" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>LAST NAME</label>
                                    <input asp-for="ViewModel.StudentInfo.LastName" />
                                    <span asp-validation-for="ViewModel.StudentInfo.LastName" class="text-danger"></span>
                                </div>

                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.StudentInfo.Gender" class="clear-top-margin"><i class="fa fa-venus"></i>GENDER</label>
                                    <select asp-for="ViewModel.StudentInfo.Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                                        <option value=>Select Gender</option>
                                    </select>
                                    <span asp-validation-for="ViewModel.StudentInfo.Gender" class="text-danger"></span>
                                </div>
                                
                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.StudentInfo.UniversityYear" class="clear-top-margin"><i class="fa fa-venus"></i>UNIVERSITY YEARS</label>
                                    <select asp-for="ViewModel.StudentInfo.UniversityYear" asp-items="Html.GetEnumSelectList<UniversityYears>()">
                                        <option value=>Select University Year</option>
                                    </select>
                                    <span asp-validation-for="ViewModel.StudentInfo.UniversityYear" class="text-danger"></span>
                                </div>

                                <div class="clearfix"></div>
                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.Email" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>EMAIL</label>
                                    <input asp-for="ViewModel.Email" />
                                    <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
                                </div>

                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.Password" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>PASSWORD</label>
                                    <input asp-for="ViewModel.Password" />
                                    <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
                                </div>
                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.ConfirmPassword" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>CONFIRM PASSWORD</label>
                                    <input asp-for="ViewModel.ConfirmPassword" />
                                    <span asp-validation-for="ViewModel.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.StudentInfo.Department" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>DEPARTMENT</label>
                                    <input asp-for="ViewModel.StudentInfo.Department" />
                                    <span asp-validation-for="ViewModel.StudentInfo.Department" class="text-danger"></span>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-sm-12">
                                    <button type="submit">REGISTER</button>
                                    <a href="/Identity/Account/Login">LOGIN</a>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
