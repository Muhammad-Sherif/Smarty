@page "{studentId}/{courseId}/{dateTime}"
@model EditModel
@{
}



<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12 clear-padding-xs">
            <h5 class="page-title"><i class="fa fa-user-secret"></i> EDIT STUDENT ATTENDANCE</h5>
            <div class="section-divider"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 clear-padding-xs">
            <div class="col-md-12">
                <div class="dash-item first-dash-item">
                    <h6 class="item-title"><i class="fa fa-user"></i>STUDENT ATTENDANCE INFO</h6>
                    <form  method="post">
                        <div class="inner-item">
                            <div asp-validation-summary="ModelOnly" class="Dash-form text-danger"></div>
							<input  type="hidden" asp-for ="ViewModel.StudentId" />
							<input type="hidden" asp-for ="ViewModel.CourseId" />
							<input type="hidden" asp-for ="ViewModel.DateTime" />
                            <div class="dash-form">
                                <div class="col-sm-3">
                                    <label asp-for="ViewModel.Status" class="clear-top-margin"><i class="fa fa-venus"></i>GENDER</label>
                                    <select asp-for="ViewModel.Status" asp-items="Html.GetEnumSelectList<AttendanceStatus>()">
                                        <option value=>Select Status</option>
                                    </select>
                                    <span asp-validation-for="ViewModel.Status" class="text-danger"></span>
                                </div>
                                <div class="col-sm-3">
									<label  asp-for="ViewModel.Remarks" class="clear-top-margin"><i class="fa fa-code"></i>Remarks</label>
									<input  asp-for ="ViewModel.Remarks" />
									<span asp-validation-for="ViewModel.Remarks" class="text-danger"></span>
								</div>
								<div class="clearfix"></div>
                                <div class="col-sm-12">
                                    <button type="submit">EDIT</button>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
