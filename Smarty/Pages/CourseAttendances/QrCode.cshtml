@page "{courseId}/{dateTime}"
@model QrCodeModel
@{
}

<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12 clear-padding-xs">
            <h5 class="page-title"><i class="fa fa-sliders"></i>COURSE ATTENDANCE</h5>
            <div class="section-divider"></div>
        </div>
    </div>
    <div class="row">

        <input id="qrCodeUrl" type="hidden" asp-for="QrCodeUrl"/>
        <div class="col-lg-12 clear-padding-xs">
            <div class="col-lg-12">
                <div class="dash-item first-dash-item">
                    <h6 class="item-title"><i class="fa fa-qrcode"></i>SCAN QR CODE TO TAKE ATTENDANCE</h6>
                    <div class="inner-item dash-form ">
                        <div id="qrcode"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




@section Scripts {

    <script src=~/assets/js/qrcode.min.js></script>
    <script>

        var qrCodeUrl = $("#qrCodeUrl").val();
        $(document).ready(function () {
            var qrcode = new QRCode("qrcode", {
                text: qrCodeUrl,
                width: 500,
                height: 500,
                colorDark : "#000000",
                colorLight : "#ffffff",
                correctLevel : QRCode.CorrectLevel.H
            });
            qrcode.makeCode();

        });

    </script>

}